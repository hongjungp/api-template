<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.apitemplate.domain.member.MemberMapper">
    <resultMap id="memberResultMap" type="com.example.apitemplate.domain.member.Member">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
    </resultMap>

    <insert id="createMember" parameterType="com.example.apitemplate.domain.member.Member" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO member (email, password, nickname, role)
        VALUES (#{email}, #{password}, #{nickname}, #{role})
    </insert>
    <select id="findByIdMember" parameterType="java.lang.Long" resultMap="memberResultMap">
        SELECT *
        FROM member
        WHERE id = #{id}
    </select>
    <select id="findByEmailMember" parameterType="java.lang.String" resultMap="memberResultMap">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>

</mapper>