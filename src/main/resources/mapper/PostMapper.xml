<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.apitemplate.post.PostMapper">
    <resultMap id="postResultMap" type="com.example.apitemplate.post.Post">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <insert id="createPost" parameterType="com.example.apitemplate.post.Post" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO posts (title, content)
        VALUES (#{title}, #{content})
    </insert>


    <select id="findAllPosts" resultMap="postResultMap">
        SELECT * FROM posts
    </select>

    <select id="findPostById" parameterType="java.lang.Long" resultMap="postResultMap">
        SELECT * FROM posts WHERE id = #{id}
    </select>


</mapper>